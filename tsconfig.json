{
	"compilerOptions": {
		"baseUrl": "./",
		"allowSyntheticDefaultImports": true,
		"jsx": "react",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"outDir": "./Target",
		"rootDir": "./Source",
		"target": "ESNext"
	},
	"exclude": ["node_modules", "Target"],
	"extends": "typescript-esbuild/Target/Configuration/TypeScript",
	"include": ["Source"],
	"ts-node": {
		"transpileOnly": true
	}
}
